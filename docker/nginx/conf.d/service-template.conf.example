# Template for adding a new service
# Copy this file and rename it to yourservice.conf
# Replace 'yourservice' with your service name

server {
    listen 80;
    # Uncomment and set your domain name if using DNS
    # server_name yourservice.local;
    
    # Path-based routing example (access via /yourservice path)
    location /yourservice/ {
        # The address where your service is available (container name or IP:port)
        proxy_pass http://yourservice:8080/;
        
        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Fix trailing slash handling (only if needed)
        # proxy_redirect /path/ /yourservice/;
        
        # Uncomment for websocket support
        # proxy_http_version 1.1;
        # proxy_set_header Upgrade $http_upgrade;
        # proxy_set_header Connection "upgrade";
    }
    
    # Optional: Access logs specific to this service
    # access_log /var/log/nginx/yourservice.access.log;
    # error_log /var/log/nginx/yourservice.error.log;
}

